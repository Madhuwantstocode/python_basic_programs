#factorial of a number 

num= int(input("Enter the number"))

fact=1
for i in range(1,num+1):
    fact=fact*i
    
print("Factorial of", num, " is", fact)

#using recurssive function
num= int(input("Enter the number"))

def fact(n):
    if(n==1):
        return n
    else:
            
        return n*fact(n-1)

print("The factorial of a number is", fact(num))
